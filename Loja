import java.util.Scanner;

public class Loja {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Digite o valor da compra: ");
		double ValorCompra = entrada.nextDouble();
		
		double DescontoVinte = (ValorCompra * 0.2);
		double DescontoQuinze = (ValorCompra * 0.15);
		
		if(ValorCompra >= 300) {
			System.out.println("O Valor do desconto é de " + DescontoVinte);
			System.out.println("Valor total da compra: " + (ValorCompra - DescontoVinte));
		} else if (ValorCompra <=300) {
			System.out.println("O valor do desconto é de " + DescontoQuinze);
			System.out.println("Valor total da compra: " + (ValorCompra - DescontoQuinze));
		}
		
		
	}
}
